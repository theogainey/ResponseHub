{
  "manifest_version": 3,
  "name": "ResponseHub",
  "description": "Send HTTP Requests and inspect their responses",
  "version": "1.2.0",
  "host_permissions":[
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "assets/icon-128.png"
  },
  "icons": {
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  }  
}
